@model Tasks.Menu

<li class="dropdown tasks-menu">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-flag-o"></i>
		<span class="label label-danger">@Model.Items.Count</span>
	</a>
	<ul class="dropdown-menu">
		<li class="header">You have @Model.Items.Count tasks</li>
		<li>
			<ul class="menu">
				@foreach (var item in Model.Items) {
					<li>
						<a href="#">
							<h3>
								@item.Title
								<small class="pull-right">@item.Progress%</small>
							</h3>
							<div class="progress xs">
								<div class="@item.ProgressCssClass" style="width: @item.Progress%" role="progressbar" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100">
									<span class="sr-only">@item.Progress% Complete</span>
								</div>
							</div>
						</a>
					</li>
				}
			</ul>
		</li>
		<li class="footer">
			<a href="#">View all tasks</a>
		</li>
	</ul>
</li>