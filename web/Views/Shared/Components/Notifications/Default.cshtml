@model Notifications.Menu

<li class="dropdown notifications-menu">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-bell-o"></i>
		<span class="label label-warning">@Model.Items.Count</span>
	</a>
	<ul class="dropdown-menu">
		<li class="header">You have @Model.Items.Count notifications</li>
		<li>
			<ul class="menu">
				@foreach (var item in Model.Items) {
					<li>
						<a href="#">
							<i class="@item.IconCssClass"></i> @item.Title
						</a>
					</li>
				}
			</ul>
		</li>
		<li class="footer"><a href="#">View all</a></li>
	</ul>
</li>